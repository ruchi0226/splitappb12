<mvc:View controllerName="app.splitappb12.controller.DetailView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form">
    <Page id="idDet" title="{i18n>detail}">
    	<content>
			<Button text="{/supplierTab/0/name}"/>
			<!--<Button text="{toolModel>name}" ></Button>-->
			<ObjectHeader icon="{toolModel>icon}" title="{toolModel>name}" intro="{toolModel>id}" number="{toolModel>price}"
				numberUnit="{toolModel>currency}"></ObjectHeader>
		</content>
		<IconTabBar>
			<items>
				<IconTabFilter icon="sap-icon://information">
					<content>
						<f:SimpleForm>
							<Label text="ID"></Label>
							<Text text="{toolModel>id}"></Text>
							<Label text="Name"></Label>
							<Text text="{toolModel>name}"></Text>
							<Label text="Description"></Label>
							<Text text="{toolModel>description}"></Text>
						</f:SimpleForm>
					</content>
				</IconTabFilter>
				<IconTabFilter icon="sap-icon://supplier">
					<Table items="{/supplierTab}">
						<columns>
							<Column>
								<Text text="id"></Text>
							</Column>
							<Column>
								<Text text="Name"></Text>
							</Column>
							<Column>
								<Text text="Contact Person"></Text>
							</Column>
							<Column>
								<Text text="email"></Text>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{id}"></Text>
									<Text text="{name}"></Text>
									<Input value="{contact_person}" showValueHelp="true" valueHelpRequest="f4Help"></Input>
									<Text text="{email}"></Text>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</IconTabFilter>
			</items>
		</IconTabBar>
    </Page>
</mvc:View> 